{
    "script_generators": {
        "genPBS": {
            "job_name": {
                "default": "the_one_job",
                "setting_str": "#PBS -N <setting>",
                "flag": "-N", 
                "help": "name of the job"
            },
            "num_cores":{
                "default": "1:centos6", 
                "setting_str": "#PBS -l nodes=1:ppn=<setting>", 
                "flag": "--ppn", 
                "help": "number of cores for the program to ran on"
            }, 
            "time": {
                "default": 24, 
                "setting_str": "#PBS -l walltime=<setting>:00:00", 
                "flag": "-t", 
                "help": "estimated time limit"
            }, 
            "memory": {
                "default": "16G",
                "setting_str": "#PBS -l mem=<setting>", 
                "flag": "-mem", 
                "help": "estimated memory usage"
            }, 
            "shell": {
                "default": "/bin/bash", 
                "setting_str": "#PBS -S <setting>", 
                "flag": "-S", 
                "help": "Which shell the script will run on"
            }, 
            "queue":{
                "default": "slst_zhangly", 
                "setting_str": "#PBS -q <setting>", 
                "flag": "-q", 
                "help": "queue for the job to run on"
            }
        }
    }, 
    "templates": {
        "<header1>": "header1", 
        "<header2>": "header2", 
        "<header3>": "header3"
    }
}
